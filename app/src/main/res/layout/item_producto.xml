<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="170dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textNombre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#0199FF"
                android:layout_marginStart="10dp"/>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/imgProducto"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/panadol_extra_fuerte"/>

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="120dp"
                    android:text="Laboratorio:"
                    android:textColor="#0199FF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textLaboratorio"
                    android:layout_width="206dp"
                    android:layout_height="39dp"
                    android:layout_marginStart="205dp"
                    android:text="lab"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="115dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="40dp"
                    android:text="IFA:"
                    android:textColor="#0199FF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textIFA"
                    android:layout_width="258dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="150dp"
                    android:layout_marginTop="40dp"
                    android:text="ifa"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="60dp"
                    android:text="Precio por empaque:"
                    android:textColor="#0199FF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPrecioEmpaque"
                    android:layout_width="151dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="260dp"
                    android:layout_marginTop="60dp"
                    android:text="emp"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="25dp"
                    android:layout_marginStart="120dp"
                    android:layout_marginTop="80dp"
                    android:text="Precio por unidad:"
                    android:textColor="#0199FF"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/textPrecioUnidad"
                    android:layout_width="166dp"
                    android:layout_height="25dp"
                    android:layout_marginStart="245dp"
                    android:layout_marginTop="80dp"
                    android:text="unit"
                    android:textColor="@color/black"
                    android:textSize="15dp" />

            </androidx.cardview.widget.CardView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>